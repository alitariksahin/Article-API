<%- include("partials/header"); -%>

<div class="container">
  <div class="row my-3">
    <div class="col-lg-12">
      <div class="table-responsive">
        <% if (articles.length === 0) { %>
          <h2 class="text-center text-secondary"><strong>Sorry!</strong></h2>
          <h3 class="text-center text-secondary"><strong>No articles found in database.</strong></h3>
        <% } else {%>
          <table class="table table-striped text-center">
            <thead>
              <tr class= "table-dark">
                <th>ID</th>
                <th>Author</th>
                <th>Title</th>
                <th>Article</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% articles.forEach((article) => { %>
                <tr>
                  <td> <%= article._id %> </td>
                  <td> <%= article.author %> </td>
                  <td> <%= article.title %> </td>
                  <td>
                  <% if (article.content.length > 30) { %>
                      <%= article.content.slice(0, 30) + "..." %> <a class="link-secondary" href="/display/<%= article._id %>"> Read More </a>
                  <% } else { %>
                    <%= article.content %>
                  <% } %>
                  </td>
                  <td>
                    <a href="/edit/<%= article._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                    <a href="/remove/<%= article._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                  </td>
                </tr>

              <% }); %>

            </tbody>
          </table>
        <% } %>
      </div>
    </div>
  </div>
</div>


<%- include("partials/footer"); -%>
